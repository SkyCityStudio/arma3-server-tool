<Window x:Class="steamcmdTools.InputData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:steamcmdTools"
        mc:Ignorable="d"
        Title="输入令牌以继续" Height="144" Width="414" Icon="/Resources/IC.ico" ResizeMode="NoResize">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Margin="41,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" Grid.ColumnSpan="3"/>
        <Button Content="继续" HorizontalAlignment="Left" Margin="110,42,0,0" VerticalAlignment="Top" Width="61" Height="28" Click="Button_Click" Grid.Column="2"/>
        <Label Content="请输入您的Steam令牌:" HorizontalAlignment="Left" Margin="41,17,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
